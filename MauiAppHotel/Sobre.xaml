<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Sobre"
             Title="Sobre"
             BackgroundColor="{StaticResource Gray200}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10">
        <Frame HeightRequest="300" WidthRequest="300" Padding="10">
            <VerticalStackLayout>
                <Label Text="Sobre o Desenvolvedor"
                       FontAttributes="Bold"
                       FontFamily="MontserratVariableFontwght"
                       FontSize="30"
                       TextColor="{StaticResource PrimaryDark}" />
                
                <Label Text="Felipe Silva do Nascimento"
                       FontSize="20"
                       TextColor="{StaticResource PrimaryDark}" />
                
                <Label Text="Ano de Desenvolvimento: 2024"
                       FontSize="20"
                       TextColor="{StaticResource PrimaryDark}" />
                <Button Text="Voltar"
                    BackgroundColor="{StaticResource PrimaryDark}"                    
                    Clicked="Button_Clicked"/>


            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>

</ContentPage>
